<div class="container">
  <div class="row">
    <div class="row">
      <h2 class="header col s12 m6 offset-m3 l6 offset-l3"><%= action %></h2>
    </div>
    <% if @currency.errors.any? %>
      <% @currency.errors.full_messages.each do |message| %>
        <script>
          Materialize.toast('<%= message %>', 4000, 'red');
        </script>
      <% end %>
    <% end %>
    <%= form_for [:backoffice, :settings, @currency], class: "col s12 m9 l10" do |f| %>
    <div class="row">
      <div class="input-field col s12 m6 offset-m3 l6 offset-l3">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
      <div class="row">
        <div class="input-field col s12 m6 offset-m3 l6 offset-l3">
          <%= f.label :code %>
          <%= f.text_field :code %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12 m6 offset-m3 l6 offset-l3">
          <%= f.label :sign %>
          <%= f.text_field :sign %>
        </div>
      </div>
      <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3">
          <button type="submit" class="btn waves-effect waves-light"><i class="material-icons right">send</i>Save</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
