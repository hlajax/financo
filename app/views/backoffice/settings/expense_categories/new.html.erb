<!-- Navbar goes here -->
<%= render partial: "backoffice/shared/nav" %>

<div class="container">
  <div class="row">
    <div class="col s12 m9 l10">
      <h2 class="header">New Expense Category</h2>
        <%= form_for [:backoffice, :settings, @expense_category], class: "col s12 m9 l10" do |f| %>
          <div class="row">
            <div class="input-field col s12 m9 l10">
              <%= f.label :name %>
              <%= f.text_field :name %>
            </div>
          </div>
          <button type="submit" class="btn waves-effect waves-light"><i class="material-icons right">send</i>Save</button>
        <% end %>
    </div>
  </div>
</div>
