<!-- Navbar goes here -->
<%= render partial: "backoffice/shared/nav" %>

<div class="container">
  <!-- Page Layout here -->
  <!-- Grey navigation panel -->
  <ul class="collapsible popout" data-collapsible="accordion">
    <li>
      <div class="collapsible-header"><i class="material-icons">filter_drama</i>Categories</div>
      <div class="collapsible-body">
        <ul id="tabs-swipe-demo" class="tabs">
            <li class="tab col s6 m6 l6"><a href="#expense-swipe-1">Expense</a></li>
            <li class="tab col s6 m6 l6"><a href="#income-swipe-2">Income</a></li>
          </ul>
          <div id="expense-swipe-1" class="col s12">
            <table class="highlight">
              <thead>
                <tr>
                  <th data-field="id">ID</th>
                  <th data-field="name">Name</th>
                </tr>
              </thead>

              <tbody>
                <% @expense_categories.each do |expense_category| %>
                <tr>
                  <td><%= expense_category.id %></td>
                  <td><%= expense_category.name %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div id="income-swipe-2" class="col s12">
            <table class="highlight">
              <thead>
                <tr>
                  <th data-field="id">ID</th>
                  <th data-field="name">Name</th>
                </tr>
              </thead>

              <tbody>
                <% @income_categories.each do |income_category| %>
                <tr>
                  <td><%= income_category.id %></td>
                  <td><%= income_category.name %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
      </div>
    </li>
  </ul>
</div>
