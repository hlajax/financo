<!-- Income Modal Structure -->
<div id="modal-income" class="modal modal-fixed-footer">
  <%= form_for [:backoffice, @income_transaction] do |f| %>
  <h4>New Income</h4>
  <div class="modal-content">
      <%= f.label :account_id %>
      <%= f.collection_select :account_id, Account.order(:name), :id, :name, include_blank: true %>

      <%= f.label :amount %>
      <%= f.number_field :amount %>

      <%= f.label :currency_id %>
      <%= f.collection_select :currency_id, Currency.order(:name), :id, :name, include_blank: true %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :payee_id %>
      <%= f.collection_select :payee_id, Payee.order(:name), :id, :name, include_blank: true %>

      <%= f.label :income_category_id %>
      <%= f.collection_select :income_category_id, IncomeCategory.order(:name), :id, :name, include_blank: true %>

      <%= f.label :datetime %>
      <%= f.date_field :datetime %>

      <%= f.label :done %>
      <%= f.check_box :done %>
  </div>
  <div class="modal-footer">
    <button type="submit" class="modal-action modal-close btn waves-effect waves-light"><i class="material-icons right">send</i>Save</button>
  </div>
  <% end %>
</div>

<!-- Exepense Structure -->
<div id="modal-expense" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>New Expense</h4>
    <p>A bunch of text</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
  </div>
</div>

<!-- Transfer Structure -->
<div id="modal-transfer" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4>New Transfer</h4>
    <p>A bunch of text</p>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
  </div>
</div>

<div class="fixed-action-btn">
  <a class="btn-floating btn-large red tooltipped" data-position="left" data-delay="0" data-tooltip="Add transaction">
    <i class="large material-icons">add</i>
  </a>
  <ul>
    <li>
      <!-- Income Modal Trigger -->
      <a class="waves-effect waves-light btn-floating green modal-trigger tooltipped" data-position="left" data-delay="0" data-tooltip="Income" href="#modal-income">
        <i class="material-icons">arrow_downward</i>
      </a>
    </li>
    <li>
      <!-- Expense Modal Trigger -->
      <a class="waves-effect waves-light btn-floating red modal-trigger tooltipped" data-position="left" data-delay="0" data-tooltip="Expense" href="#modal-expense">
        <i class="material-icons">arrow_upward</i>
      </a>
    </li>
    <li>
      <!-- Transfer Modal Trigger -->
      <a class="waves-effect waves-light btn-floating blue modal-trigger tooltipped" data-position="left" data-delay="0" data-tooltip="Transfer" href="#modal-transfer">
        <i class="material-icons">compare_arrows</i>
      </a>
    </li>
  </ul>
</div>
